    <script>
        function initialize() { //Define Campinas como centro do mapa
            var mapOptions = {
                center: { lat: -22.905556, lng:-47.060833},
                zoom: 14
                };
              // O bloco inteiro abaixo define o estilo do mapa. Tutorial aqui: https://developers.google.com/maps/documentation/javascript/styling#creating_a_styledmaptype  
                var styles = [
                 {
                    featureType: "road",
                    elementType: "geometry",
                    stylers: [
                      { lightness: 100 },
                      { visibility: "simplified" }
                    ]
                  },{
                    featureType: "road",
                    elementType: "labels",
                    stylers: [
                      { visibility: "off" }
                    ]
                  }
                ];
                // Fim do estilo.		

            map = new google.maps.Map(document.getElementById('mapa'),mapOptions); //Desenha o mapa na tela
            map.setOptions({styles: styles});  
	
      }
        var map;	
        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
    
